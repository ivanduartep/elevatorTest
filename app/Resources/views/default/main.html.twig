{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-10 col-md-offset-1">
        <div class="jumbotron">
            {{ form_start(form) }}
            <div class="control-group col-md-12">
                <div class="controls col-md-6 col-md-offset-3 col-sm-12">
                    {{ form_errors(form.player) }}
                    {{ form_widget(form.player, { 'attr':{'placeholder':'Type your Name'} }) }}
                    <p class="help-block"></p>
                </div>
            </div>
            <div class="control-group col-md-12">
                <div class="controls col-md-6 col-md-offset-3 col-sm-12">
                    {{ form_errors(form.floors) }}
                    {{ form_widget(form.floors, { 'attr':{'placeholder':'Number of Floors'} }) }}
                    <p class="help-block"></p>
                </div>
            </div>

            <div class="control-group col-md-12">
                <div class="controls col-md-6 col-md-offset-3 col-sm-12">
                    {{ form_errors(form.elevators) }}
                    {{ form_widget(form.elevators, { 'attr':{'placeholder':'Number of Elevators'} }) }}
                    <p class="help-block"></p>
                </div>
            </div>

            <div class="control-group text-center ">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg'}, 'label': 'Start Simulation' }) }}
            </div>

            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}